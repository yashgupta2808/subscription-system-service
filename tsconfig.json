{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "cdk.out"],
  "include": ["src/**/*.ts", "test/**/*.ts"]
}